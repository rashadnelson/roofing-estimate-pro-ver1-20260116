{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["server/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "server/db/crud-test.ts",
    "server/db/test-*.ts",
    "server/test-*.ts",
    "server/verify-*.ts"
  ]
}
